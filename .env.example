# OpenClaw Configuration
NODE_ENV=production
PORT=3000

# AI Model Configuration (Choose one or multiple)
# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Default AI Model
DEFAULT_MODEL=claude-sonnet-4-5-20250929

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_ALLOWED_USERS=123456789,987654321  # Comma-separated list of Telegram user IDs
TELEGRAM_PRIVACY_MODE=true
TELEGRAM_REQUIRE_MENTION=false

# Channel Configuration
ENABLED_CHANNELS=telegram

# Domain & Email for TLS (Caddy)
DOMAIN=your-domain.com
EMAIL=your-email@example.com

# Security Settings
MAX_MESSAGE_LENGTH=4096
RATE_LIMIT_WINDOW=60000  # 1 minute
RATE_LIMIT_MAX_REQUESTS=20

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Database (Optional - for persistent conversations)
# DATABASE_URL=postgresql://user:password@localhost:5432/openclaw

# Admin Settings
ADMIN_USER_IDS=123456789  # Comma-separated list of admin user IDs
