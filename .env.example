# Claude Code Telegram Bot - Simplified Configuration
# Uses your Claude Code subscription (no API key required!)

# === REQUIRED SETTINGS ===
# Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Bot username (without @)
TELEGRAM_BOT_USERNAME=your_bot_username

# Base directory for project access (on VPS)
APPROVED_DIRECTORY=/opt/openclaw/projects

# === SECURITY SETTINGS ===
# Comma-separated list of allowed Telegram user IDs
# Get your ID from @userinfobot
ALLOWED_USERS=123456789

# === CLAUDE SETTINGS ===
# Use Claude CLI authentication (no API key needed!)
USE_SDK=true

# Leave this empty - Claude CLI auth will be used
ANTHROPIC_API_KEY=

# Path to Claude CLI (auto-detected if not specified)
CLAUDE_CLI_PATH=

# Maximum conversation turns before requiring new session
CLAUDE_MAX_TURNS=10

# Timeout for Claude operations (seconds)
CLAUDE_TIMEOUT_SECONDS=300

# Maximum cost per user in USD (optional limit)
CLAUDE_MAX_COST_PER_USER=10.0

# === RATE LIMITING ===
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60
RATE_LIMIT_BURST=20

# === STORAGE SETTINGS ===
DATABASE_URL=sqlite:///data/bot.db
SESSION_TIMEOUT_HOURS=24
MAX_SESSIONS_PER_USER=5

# === FEATURE FLAGS ===
ENABLE_GIT_INTEGRATION=true
ENABLE_FILE_UPLOADS=true
ENABLE_QUICK_ACTIONS=true
ENABLE_SESSION_EXPORT=true
ENABLE_IMAGE_UPLOADS=true
ENABLE_CONVERSATION_MODE=true

# === MONITORING ===
LOG_LEVEL=INFO
ENABLE_TELEMETRY=false

# === PRODUCTION SETTINGS ===
ENVIRONMENT=production
DEBUG=false
DEVELOPMENT_MODE=false
